---
import Layout from "@/layouts/Layout.astro";
import Base from "@/layouts/Base.astro";
import { AdminSideBarNav } from "@/components/admin/sidebar-nav";

import { getAuth } from "firebase-admin/auth";
import { app } from "@/firebase/server";

const auth = getAuth(app);

/* Check current session */
if (!Astro.cookies.has("__session")) {
  return Astro.redirect("/logar");
}
// @ts-ignore
const sessionCookie = Astro.cookies.get("__session").value;
const decodedCookie = await auth.verifySessionCookie(sessionCookie);
const user = await auth.getUser(decodedCookie.uid);

if (!user) {
  return Astro.redirect("/logar");
}

if (!user.customClaims?.admin) {
  return Astro.redirect("/");
}
---

<Layout title="Administrador">
  <Base>
    <div slot="content" class="grid gap-6 relative">
      <div>
        <h2 class="text-2xl font-bold tracking-tight">Painel de ações</h2>
        <p class="text-sm text-stone-500">
          Configure o sistema, veja os pedidos, entre em contato com os
          usuários.
        </p>
      </div>

      <div class="sticky top-24 h-[75vh] overflow-auto">
        <AdminSideBarNav client:load />
      </div>
    </div>
  </Base>
</Layout>
