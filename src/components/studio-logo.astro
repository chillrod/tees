---
interface Props {
  left?: boolean;
}

const { left } = Astro.props;
---

<div
  class=`flex items-center gap-4 dark:text-stone-200 cursor-pointer`
  id="studiologo"
>
  <img src="./studio.svg" alt="Studio Logo" width="30px" height="30px" />
  <div class=`flex flex-col w-full ${left ? '' : ''}`>
    <span class=`uppercase ${left ? 'text-md' : 'text-xs'} leading-none`
      >Studio Estampar</span
    >
    <h2 class="font-black text-xl uppercase -tracking-wide leading-tight">
      Canvas
    </h2>
  </div>
</div>

<script>
  document.getElementById("studiologo")?.addEventListener("click", () => {
    window.location.href = "/";
  });
</script>
