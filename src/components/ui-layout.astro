<div
  class="md:hidden grid place-items-center h-[100vh] mx-auto text-center max-w-80"
>
  <h2>
    Nosso canvas ainda está em construção, portanto a versão para celular está
    desativada na versão beta.
  </h2>
</div>
<div class="hidden md:grid">
  <Base>
    <div
      slot="content"
      class="relative grid grid-cols-2 items-center overflow-hidden h-full"
    >
      <div class="w-full h-full flex items-center">
        <div class="self-end mb-2">
          <slot name="colors" />
        </div>
        <div class="w-full h-full">
          <slot name="tee" />
        </div>
      </div>
      <div class="w-full h-full relative">
        <slot name="canvas" />
      </div>
      <div class="absolute right-0 top-0">
        <slot name="layer" />
      </div>
      <div class="absolute bottom-0 w-full rounded-lg">
        <div class="grid grid-cols-2 justify-between w-full">
          <div></div>
          <div class="self-end bg-stone-100 dark:bg-stone-900">
            <slot name="controls" />
          </div>
        </div>
      </div>
    </div>
  </Base>
</div>

<script>
  const teeButton = document.getElementById("teeButton");
  const canvasButton = document.getElementById("canvasButton");
  const tee = document.querySelectorAll("#tee");
  const canvas = document.getElementById("canvas");

  teeButton?.addEventListener("click", () => {
    tee?.forEach((tee: any) => tee.classList.remove("hidden"));
    canvas?.classList.add("hidden");
  });

  canvasButton?.addEventListener("click", () => {
    tee?.forEach((tee: any) => tee.classList.add("hidden"));
    canvas?.classList.remove("hidden");
  });
</script>
